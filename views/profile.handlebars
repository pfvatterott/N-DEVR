{{!-- Title and Image --}}
<div class="parallax-container">
  <div class="parallax">
    <img src="/assets/img/trailintrees.jpg" alt="trail in woods" class="responsive-img" />
    <div class="centered-left">
      <h1><span style="color: #EBAF1A">N</span>-DEVR Profile</h1>
    </div>
  </div>
</div>


<section class="section profile-top-section">
  <div class="container">
    <div class="row">
      <div class="col s12 m6" id="exofont">
        <img class='circle profile-pic z-depth-3' src={{user.user_photo}}>
        <h3>{{user.user_first}} {{user.user_last}}</h3>
        {{#if user.user_city}}
        <p><i class="fas fa-map-marker-alt"></i> {{user.user_city}}, {{user.user_state}}</p>
        {{/if}}
      </div>
      <div class="col s12 m6 z-depth-3">
        <h3 class="center-align" id="exofont">Plan an <span style="color: #EBAF1A">N</span>-DEVR</h3>
        <a class="waves-effect waves-light btn-large new-activity-button" href="/profile/activity"><i
            class="material-icons left">add_circle</i>Create new Activity</a>
        <a class="waves-effect waves-light btn-small strava-logout-button" href="/auth/logout">Logout</a>
      </div>
    </div>
  </div>
</section>


<section class="activitysection">
  <div class="container" id="exofont">
    <div class="row">
      <div class='col s12 m6'>
        <h3>Your activities</h3>
        <ul class="tabs">
          <li class="tab col s6"><a href="#upcoming-activities" class="active">Upcoming Activities</a></li>
          <li class="tab col s6"><a href="#past-activities">Past Activities</a></li>
        </ul>
        <div class="collection" id="upcoming-activities">
          {{#each activities}}
          <a href="/profile/viewActivity/{{id}}" class="collection-item">{{activity_name}}
          </a>
          {{/each}}
        </div>
        <div class="collection" id="past-activities">
          {{#each activities}}
          <a href="/profile/viewActivity/{{id}}" class="collection-item">{{activity_name}}</a>
          {{/each}}
        </div>
      </div>
      <div class="col s12 m6" id="exofont">
        <h4 class='center-align'>Past Activities</h4>
        <h5 class='center-align'>{{activities.length}}</h5>
        <br>
        <h4 class='center-align'>Upcoming Activities</h4>
        <h5 class='center-align'>{{activities.length}}</h5>
      </div>
    </div>
  </div>
</section>