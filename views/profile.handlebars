<section class="section">
  </div>
  <div class="row container">
    <div class="col s12 m6">
        <h2>Welcome to your Profile</h2>
        <p>strava user name: {{user.user_name}}</p>
        <p>strava id: {{user.user_strava_id}}</p>
        <p>User Full Name: {{user.user_first}} {{user.user_last}}</p>
        <img src={{user.user_photo}}>
        <a class="waves-effect waves-light btn strava-login-button" href="/auth/logout">Logout of Strava</a>
    </div>
    <div class='col s12 m6'>
      <h3>Your activities</h3>
      <div class="collection">
        {{#each activities}}
        <a href="viewActivity/{{id}}" class="collection-item">{{activity_name}}</a>
        {{/each}}
      </div>
    </div>
  </div>
</section>
