<section class="section">
  </div>
  <div class="row container">
    <h2>Map Test</h2>
  </div>
  <div class="row container">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Activity Name" id="activity_name" type="text" class="validate">
          <label for="activity_name">Activity Name</label>
        </div>
      </div>
    </form>
  </div>
  <div class="row container">
    <div class="col s12 m6">
      <table class="highlight">
        <thead>
          <tr>
            <th>Segment Name</th>
            <th>Distance</th>
            <th>Elev. Change</th>
          </tr>
        </thead>
        <tbody id='activityList'>
        </tbody>
      </table>
    </div>
    <div class="col s12 m6">
      <div id="mapid" style="height: 500px"></div>
    </div>
  </div>
  <div class="row container">
    <h4 id="totalDistance"></h4>
    <h4 id="totalElevation"></h4>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <a class="waves-effect waves-light btn save-activity" name="save-activity" id="save-activity">Save Activity</a>
    <p id='user_strava_id'>{{user.user_strava_id}}</p>
  </div>
</section>

<script src="/assets/js/activity.js"></script>